# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
indent_style = space

# Markdown
[*.md]
indent_size = 2

# Tab indentation
[Makefile]
indent_style = tab
tab_width = 4
